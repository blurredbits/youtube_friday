source :rubygems

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

gem 'activesupport'
gem 'activerecord'

gem 'rake'

# MJM Extensions
gem 'bcrypt-ruby'
gem 'sinatra-flash'

gem 'shotgun'
gem 'pusher'
gem 'backports'

group :test do
  gem 'faker'
  gem 'rspec'
end
